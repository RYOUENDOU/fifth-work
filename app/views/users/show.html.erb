
<%= link_to user_path(@user) do %>
<div>投稿数</div>  
<div class="num"><%= @user.products.count %></div>  
<% end %>  
<div class="container-fluid">
	    <% @user.products.each do |product| %>
	<div class="product">
			<div class="mainimage">
				<p><%= image_tag product.image %></p>
			</div>
			<div class="subimage">
			<% product.product_images.each do |image| %>
				<p><%= image_tag image.image_id %></p>
	        <% end %>
			</div>
			<div class="clear"></div>
				<p>タイトル:<%= product.title %></p>
				<p>価格:<%= product.price %></p>
				<p>詳細:<%= product.description %></p>
	
		  <% if current_user.id == product.user_id %>
		  	<button class ="btn btn-default">
		    	<%= link_to '編集', edit_product_path(product) %>
	    	</button>
		    <button class ="btn btn-default">
		    <%= link_to '削除', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
		  <% end %>	
	</div>
		<% end %>
</div>	

<div class="clear"></div>
<button class ="btn btn-default">
<%= link_to '戻る', products_path %>
</button>