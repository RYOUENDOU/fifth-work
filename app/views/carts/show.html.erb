
<table border= "1" class="cart">
  <tr>
    <th>商品名</th>
    <th>価格</th>
    <th>数量</th>
    <th>イメージ</th>
  </tr>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.title %></td>
      <td><%= cart_item.price %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= cart_item.image %></td>
    </tr>
  <% end %>
</table>