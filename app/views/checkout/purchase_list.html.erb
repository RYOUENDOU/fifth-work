<h1>購入履歴</h1>
<div class="">  
    <table border= "1" class="list">
      <tr>
        <th>商品名</th>
        <th>価格</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
      <% @order.order_products.each do |order_product| %>
        <tr>
          <td><%= order_product.title %></td>
          <td><%= order_product.price %></td>
          <td><%= order_product.quantity %></td>
          <td><%= order_product.price * order_product.quantity %>円</td>
        </tr>
     <% end %>
    </table>
