<%= render_breadcrumbs separator: ' > ' %>

<div class="container-fluid">
 	<div class="product">	
			<div class="mainimage">
				<p><%= image_tag @product.image %></p>
			</div>
			<div class="subimage">
				<% @product.product_images.each do |image| %>
					<p><%= image_tag image.image_id %></p>
				<% end %>
			</div>	
			<div class="clear"></div>	
			<br>
			<p>タイトル:<%= @product.title %></p>
			<p>価格:<%= @product.price %></p>
			<p>詳細:<%= @product.description %></p>
		<div class="edit">
		  <% if current_user.id == @product.user_id %>
		    <button class ="btn btn-default">
		    	<%= link_to '編集', edit_product_path(@product), class: "button" %>
	    	</button>
		    <button class ="btn btn-default">
		    <%= link_to '削除', product_path(@product), method: :delete, data: { confirm: 'Are you sure?' } %>
		  <% end %></button>
		</div>  
	</div>
<div class="clear"></div>

<button class ="btn btn-default">
<%= link_to '戻る', products_path %>
</button>
</div>